<%- include('../partials/header.ejs') %>
<%- include('../partials/navigationbar.ejs') %>
<link rel="stylesheet" href="./styles/main.css">

<div class="content">
    <div>
        <h2><%= userID %>. <%= name %> </h2>
    </div>
    <div>
        <h2>CREATE: Throw</h2>
        <form action="/admin-create-throw" method="post">
            <input type="hidden" name="user_id" value="<%= userID %>">
            <input type="hidden" name="user_name" value="<%= name %>">
            <section>
                <label>Throw Type: </label>
                <input type="radio" id="standing" name="throw_type" value="standing">
                <label for="standing">Standing</label>
                <input type="radio" id="running" name="throw_type" value="running">
                <label for="running">Running</label>
            </section>
            <section>
                <label for="throw_speed">Throw Speed (km/h): </label>
                <input type="number" name="throw_speed" id="throw_speed" step="0.01">
            </section>
            <button type="submit">SUBMIT</button>
        </form>
    </div>
    <div class="ladder-results">
        <table>
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Date</td>
                    <td>Throw Type</td>
                    <td>Throw Speed</td>
                </tr>
            </thead>
            <tbody>
                <% let counter = 1; %>
                <% userThrows.forEach(function(row) { %>
                    <tr>
                        <td><%= row.throw_id %></td>
                        <td><%= row.throw_date %></td>
                        <td><%= row.throw_type %></td>
                        <td><%= row.throw_speed %></td>
                    </tr>
                    <% counter++; %>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

<%- include('../partials/footer.ejs') %>