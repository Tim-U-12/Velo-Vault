<link rel="stylesheet" href="/styles/top_nav_bar.css">


<div class="top-nav-bar"> <!-- container -->
    <!-- logo -->
    <div>
        <a href="/" class="top-nav-logo">Velo Vault</a>
    </div> 
    
    <!-- navigation -->
    <div class="nav-links">
        <a href="/about">About</a>
        <% if (isAuthenticated) {%>
            <form action="/logout" method="post">
                <input type="submit" class="button-link" value="Logout">
            </form>
        <% } else { %>
            <!--TODO: https://www.w3schools.com/howto/howto_js_dropdown.asp -->
            <div class="dropdown">
                <button class="dropbtn">Login</button>
                <div class="dropdown-content">
                    <form action="" method="post">
                        Username: <input type="text" name="username">
                        Password: <input type="text" name="password">
                        <input type="submit" value="Submit">
                    </form>
                    <a href="#">Register</a>
                </div> 
            </div>            
        <% } %>
    </div> 
</div>

<script src="/scripts/nav.js"></script>

